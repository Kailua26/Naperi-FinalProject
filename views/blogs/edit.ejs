<%- include('../partials/header') %>


<h2>Edit Blog</h2>
<div class="edit">
<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
  <input type="text" name="title" value="<%= blog.title %>" required><br>
  <input type="text" name="snippet" value="<%= blog.snippet %>" required><br>
  <textarea name="body" required><%= blog.body %></textarea><br>
  <button type="submit">Update</button>
</form>
</div>

